        <Canvas x:Name="Block6" HorizontalAlignment="Left" Height="170" VerticalAlignment="Top" Width="170" Background="#FF077CF0" Margin="340,0,0,0"/>
        <Canvas x:Name="Block0" HorizontalAlignment="Left" Height="170" VerticalAlignment="Top" Width="170" Background="#FFF0E507" Margin="681,170,-160,-4"/>
        <Canvas x:Name="Block8" HorizontalAlignment="Left" Height="170" VerticalAlignment="Top" Width="170" Background="#FF077CF0" Margin="681,0,-160,0"/>
        <Canvas x:Name="Block9" HorizontalAlignment="Left" Height="170" VerticalAlignment="Top" Width="170" Background="#FF077CF0"/>
        <Canvas x:Name="Block7" HorizontalAlignment="Left" Height="170" VerticalAlignment="Top" Width="170" Background="#FFF0E507" Margin="0,170,0,-4"/>

    </Grid>
</UserControl>